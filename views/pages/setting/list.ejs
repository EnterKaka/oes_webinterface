<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
  <head>
    <%- include('../../partials/head'); %>
    <style>
		.btn-custom-fill:hover{
			font-size: 16px;
			padding-bottom: 8px;
			color: white;
		}
		.min::after{
		content: 'min';
		position: absolute;
		top: 10px;
		right: 0.5em;
		transition: all .05s ease-in-out;
		}
		.col-lg-3.col-md-6.col-12 input{
      text-align: right;
      padding-right: 0px;
      padding-left: 0px;
		}
    .min input{
      padding-right: 3rem !important;
    }
		.button_div{
			width: 200px;
		}
		.input_div{
      margin-left: 5px;
			/* width: calc(100% - 205px); */
		}
		#delaytimeset{
			float: right;
			margin-right: 10px !important;
		}
		@media (max-width: 880px){
			.input_div{
				width: 100%;
			}
			.button_div{
				width: 100%;
				display: flex;
				justify-content: center;
			}
			#delaytimeset{
				position: relative;
				float: none;
			}
		}

    </style>
  </head>
  <body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-color="bg-gradient-x-purple-blue" data-col="2-columns">
    <!-- fixed-top-->
    <%- include('../../partials/header'); %>
    <!-- ////////////////////////////////////////////////////////////////////////////-->
    <%- include('../../partials/sidebar'); %>

    <div class="app-content content">
      <div class="content-wrapper">
        <div class="content-wrapper-before">
          
        </div>
        <div class="content-header row">
          <div class="content-header-left col-md-4 col-12 mb-2">
            <h3 class="content-header-title">Settings</h3>
          </div>
          <div class="content-header-right col-md-8 col-12">
            <div class="breadcrumbs-top float-md-right">
              <div class="breadcrumb-wrapper mr-1">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/">Home</a>
                  </li>
                  <li class="breadcrumb-item active">Settings
                  </li>
                </ol>
              </div>
            </div>
          </div>
        </div>
        <div class="content-body">
        
            <!-- Table head options start -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <!-- <div class="card-header">
                            <h4 class="card-title">Owl Studio Setting Table</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                </ul>
                            </div>
                        </div> -->
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <!-- <p>This is Owl Studio Setting Table.
                                   <br>You can Create new setting or Edit/Delete existing settings. 
                                </p> -->
                                <% if (messages.error) { %>
                                  <!-- <p style="color:red"><%- messages.error %></p> -->
                                  <script>
                                    $.toast({
                                    heading: 'Error',
                                    text: '<%- messages.error %>',
                                    showHideTransition: 'fade',
                                    icon: 'error',
                                    hideAfter: 1500   // in milli seconds
                                  })
                                  </script>
                                <% } %>
                                
                                <% if (messages.success) { %>
                                  <!-- <p style="color:green"><%- messages.success %></p> -->
                                  <script>
                                    $.toast({
                                        heading: 'Success',
                                        text: '<%- messages.success %>',
                                        showHideTransition: 'slide',
                                        icon: 'success',
                                        hideAfter: 1500   // in milli seconds
                                    })
                                  </script>
                                <% } %>	      
                            </div>
                            <div class="row" style="padding: 0 25px">
                              <fieldset class="close_field" style="width: 100%;">
                                <legend class="close_field">
                                  Setting
                                </legend>
                                <form action="/setting/setpath" method="post" target="iframe">
                                  <!-- <fieldset>
                                  <legend>Set Delay Time</legend> -->
                                  <iframe name="iframe" style="display: none;"></iframe>
                                  <div class="row">
                                    <div class="input_div">
                                      <div class="row">
                                        <div class="col-lg-6 col-md-12 col-12">
                                          <div class="input-group mb-1">
                                            <div class="input-group-prepend">
                                              <span class="input-group-text" id="path-addon2">PATH</span>
                                            </div>
                                            <input type="text" class="form-control" name="path" placeholder="Oes APP Path" aria-label="Oes APP Path" aria-describedby="path-addon2" value="<%= path%>">
                                          </div> 
                                        </div> 
                                        <div class="col-lg-3 col-md-6 col-12">
                                          <div class="input-group mb-1 min">
                                            <div class="input-group-prepend">
                                              <span class="input-group-text" id="delaytime-addon2">Delay</span>
                                            </div>
                                            <input type="number" class="form-control" name="dtime" placeholder="Delaytime" aria-label="Delaytime" aria-describedby="delaytime-addon2" value="<%= dtime%>">
                                          </div>  
                                        </div>
                                        <div class="col-lg-3 col-md-6 col-12">
                                          <div class="input-group mb-1">
                                            <div class="input-group-prepend">
                                              <span class="input-group-text" id="port-addon2">Port</span>
                                            </div>
                                            <input type="number" class="form-control" name="port" placeholder="Port" aria-label="Port" aria-describedby="port-addon2" value="<%= port%>">
                                          </div>  
                                        </div>
                                      </div>
                                    </div>
                                    <div class="button_div">
                                      <button type="submit" id="delaytimeset" class="btn btn-custom-fill btn-min-width mr-1 mb-1">Set</button>
                                    </div>
                                  </div>
                                <!-- </fieldset> -->
                                </form>
                              </fieldset>
                              <div class="col-lg-12 col-md-12 col-12">
                                <a href="/setting/add" class="btn btn-custom-fill btn-min-width mr-1 mb-1" style="float : right; margin-right: 0px !important;">Add</a>
                              </div>
                            </div>
                            <div class='table-padding-set'>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <!-- <colgroup>
                                          <col style="width: 30%;">
                                          <col style="width: 30%;">
                                          <col style="width: 40%;">
                                        </colgroup> -->
                                        <thead class="thead-dark">
                                            <tr>
                                                <th scope="col">Database</th>
                                                <th scope="col">Collection</th>
                                                <th scope="col">#</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                          <% if (data) { %>
                                            <% data.forEach(function(member){ %>
                                              <tr>
                                                <td><%= member.dbname %></td>
                                                <td><%= member.collectionname %></td>
                                                <td>
                                                  <div style="float:left">
                                                    <a href='/setting/edit/<%= member._id %>' class="btn btn-custom-line mb-1" style="padding:0.75rem; min-width: 3rem; margin-right:10px;"><i class="fa fa-pencil"></i></a> &nbsp;			
                                                    <a href="javascript: onclick_deletesetting('<%= member._id %>')" class="btn btn-custom-line mb-1" style="padding:0.75rem; min-width: 3rem; margin-left:10px;"><i class="fa fa-remove"></i></a>
                                                  </div>
                                                </td>
                                              </tr>
                                            <% }) %>
                                          <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table head options end -->

        </div>
      </div>
    </div>
    <!-- ////////////////////////////////////////////////////////////////////////////-->

    <%- include('../../partials/footer'); %>
    <script src="/js/alert_ajax.js" type="text/javascript"></script>
  </body>
</html>