<script type="text/javascript">
	$(document).ready(()=>{
		initWebSocket();
	});
	$("#start_scan").click(()=>{
		var state = checkSocket();
		if(state === 1){
			sendMessage("start scan")
		}
	});
	function showMessage(status,head,text){
		$.toast({
			heading: head,
			text: text,
			showHideTransition: 'slide',
			icon: status,
			hideAfter: 5000   // in milli seconds
		});
	}
	function sendMessage(msg) {
		if ( websocket != null )
		{
			websocket.send( msg );
			console.log( "string sent :", '"'+msg+'"' );
		}
	}
	
	var wsUri = "ws://localhost:1234";
	var websocket = null;

	function initWebSocket() {
		try {
			if (typeof MozWebSocket == 'function')
				WebSocket = MozWebSocket;
			if ( websocket && websocket.readyState == 1 )
				websocket.close();
			websocket = new WebSocket( wsUri );
			websocket.onopen = function (evt) {
				showMessage('success','SOCKET', 'CONNECTED');
			};
			websocket.onclose = function (evt) {
				showMessage('warning','SOCKET', 'DISCONNECTED');
			};
			websocket.onmessage = function (evt) {
				showMessage('info','Message', evt.data);
			};
			websocket.onerror = function (evt) {
				showMessage('error','SOCKET', 'FAILED');
			};
		} catch (exception) {
			showMessage('error','SOCKET', 'FAILED');
		}
	}

	function stopWebSocket() {
		if (websocket)
		websocket.close();
	}
	
	function checkSocket() {
		if (websocket != null) {
			var stateStr;
			switch (websocket.readyState) {
				case 0: {
					stateStr = "CONNECTING";
					showMessage('success','STATUS', 'CONNECTING');
					break;
				}
				case 1: {
					stateStr = "OPEN";
					showMessage('success','STATUS', 'OPEN');
					break;
				}
				case 2: {
					stateStr = "CLOSING";
					showMessage('warning','STATUS', 'CLOSING');
					break;
				}
				case 3: {
					stateStr = "CLOSED";
					showMessage('warning','STATUS', 'CLOSED');
					break;
				}
				default: {
					stateStr = "UNKNOW";
					showMessage('error','STATUS', 'UNKNOW');
					break;
				}
			}
			return websocket.readyState;
		} else {
			showMessage('error','SOCKET', 'FAILED');
			return 'no';
		}
	}
</script>
