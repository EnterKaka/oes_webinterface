<script type="text/javascript">
	$(document).ready(()=>{
		initWebSocket();
	});
	$('#fileopen').click(()=>{
		$('#customFile').trigger('click');
	});
	$("#customFile").on("change", function() {
		$("#path").val(this.files[0].name);
	});

	function runApp(){
		let param = {path:$('#filepath').val()};
		$.post( '/control/runApp', param, function( result ) {
		});
	}

	function killApp(){
		let param = [];
		$.post( '/control/killApp', param, function( result ) {
			if(result === 'success')
				showMessage('success','Close APP', "Closed Successfully.");
			else
				showMessage('warning', 'Close APP', "There isn't opened App");
		});
	}

	function scan(){
		var state = checkSocket();
		if(state === 1){
			sendMessage("start scan")
		}
	}
	function showMessage(status,head,text){
		$.toast({
			heading: head,
			text: text,
			showHideTransition: 'fade',
			icon: status,
			hideAfter: 5000   // in milli seconds
		});
	}
	function sendMessage(msg) {
		if ( websocket != null )
		{
			websocket.send( msg );
			console.log( "string sent :", '"'+msg+'"' );
		}
	}
	
	var wsUri = "ws://" + server_ip + ":1234";
	var websocket = null;

	function initWebSocket() {
		try {
			if (typeof MozWebSocket == 'function')
				WebSocket = MozWebSocket;
			if ( websocket && websocket.readyState == 1 )
				websocket.close();
			websocket = new WebSocket( wsUri );
			websocket.onopen = function (evt) {
				showMessage('success','SOCKET', 'CONNECTED');
			};
			websocket.onclose = function (evt) {
				showMessage('warning','SOCKET', 'DISCONNECTED');
			};
			websocket.onmessage = function (evt) {
				showMessage('info','Message', evt.data);
			};
			websocket.onerror = function (evt) {
				showMessage('error','SOCKET', 'FAILED');
			};
		} catch (exception) {
			showMessage('error','SOCKET', 'FAILED');
		}
	}

	function stopWebSocket() {
		if (websocket)
		websocket.close();
	}
	
	function checkSocket() {
		if (websocket != null) {
			var stateStr;
			switch (websocket.readyState) {
				case 0: {
					stateStr = "CONNECTING";
					showMessage('success','STATUS', 'CONNECTING');
					break;
				}
				case 1: {
					stateStr = "OPEN";
					showMessage('success','STATUS', 'OPEN');
					break;
				}
				case 2: {
					stateStr = "CLOSING";
					showMessage('warning','STATUS', 'CLOSING');
					break;
				}
				case 3: {
					stateStr = "CLOSED";
					showMessage('warning','STATUS', 'CLOSED');
					break;
				}
				default: {
					stateStr = "UNKNOW";
					showMessage('error','STATUS', 'UNKNOW');
					break;
				}
			}
			return websocket.readyState;
		} else {
			showMessage('error','SOCKET', 'FAILED');
			return 'no';
		}
	}
</script>
